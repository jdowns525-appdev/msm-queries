<h1>
  Actor # <%= @the_actor.id %> details
</h1>

<a href="/actors" class="btn btn-block btn-outline-secondary">
  Go back
</a>

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= @the_actor.name %>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%= @the_actor.dob %>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%= @the_actor.bio %>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <%= @the_actor.image %>
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= time_ago_in_words(@the_actor.created_at) %> ago
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= time_ago_in_words(@the_actor.updated_at) %> ago
  </dd>
</dl>

<h2>Filmography<h2>

<table border="1">
    <% @character.each do | a_character | %>
    <% movie = a_character.movie_id %>

  <% single_movie = Movie.where({ :id => movie }).at(0) %>
    <tr>
    <td><dd><%= single_movie.title %></td>
    <td>
    <tr>
    <td><dd><%= single_movie.year %></td>
    <td>
      <a href="/movies/<%= single_movie.year %>">
      Show Details
      </a>
    </td>
<% end%>
